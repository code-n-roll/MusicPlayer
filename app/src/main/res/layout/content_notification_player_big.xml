<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notificationPlayer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iconAlbumCoverNotifPlayerBig"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:scaleType="fitXY"
        tools:src="@drawable/italian" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cancelNotifPlayerBig"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/fast_backward_button" />

            <TextView
                android:id="@+id/nameSongFullscreenPlayerNotifPlayerBig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                tools:text="Stressed out" />

            <TextView
                android:id="@+id/nameArtistFullScreenPlayerNotifPlayerBig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="12sp"
                tools:text="Twenty One Pilots" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/toPreviousSongButtonNotifPlayerBig"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/fast_backward_button" />

            <ImageButton
                android:id="@+id/playPauseSongButtonNotifPlayerBig"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/play_button" />

            <ImageView
                android:id="@+id/toNextSongButtonNotifPlayerBig"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/fast_forward_button" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>