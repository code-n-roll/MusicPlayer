<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/notificationPlayer"
    >
    <ImageView
        android:id="@+id/iconAlbumCoverNotifPlayerBig"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:scaleType="fitXY"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="top"
            >
        <ImageButton
            android:id="@+id/cancelNotifPlayerBig"
            android:layout_gravity="end"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/fast_backward_button"
            android:scaleType="fitCenter"
            />
        <TextView
            android:id="@+id/nameSongFullscreenPlayerNotifPlayerBig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:id="@+id/nameArtistFullScreenPlayerNotifPlayerBig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            >
            <ImageButton
                android:id="@+id/toPreviousSongButtonNotifPlayerBig"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@drawable/fast_backward_button"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                />
            <ImageButton
                android:id="@+id/playPauseSongButtonNotifPlayerBig"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@drawable/play_button"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                />
            <ImageButton
                android:id="@+id/toNextSongButtonNotifPlayerBig"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@drawable/fast_forward_button"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>