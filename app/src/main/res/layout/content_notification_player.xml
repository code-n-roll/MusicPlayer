<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:id="@+id/iconAlbumCoverNotifPlayer"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="fitXY"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_toLeftOf="@+id/controlPanelNotifPlayer"
            android:layout_toStartOf="@+id/controlPanelNotifPlayer"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="start|center_vertical"
            >

            <TextView
                android:id="@+id/nameSongFullscreenPlayerNotifPlayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:id="@+id/nameArtistFullScreenPlayerNotifPlayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/controlPanelNotifPlayer"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end|center_vertical"
            android:gravity="end"
            >
            <ImageButton
                android:id="@+id/toPreviousSongButtonNotifPlayer"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/fast_backward_button"
                android:scaleType="fitCenter"
                />
            <ImageButton
                android:id="@+id/playPauseSongButtonNotifPlayer"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                app:srcCompat="@drawable/play_button"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                />
            <ImageButton
                android:id="@+id/toNextSongButtonNotifPlayer"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/fast_forward_button"
                android:scaleType="fitCenter"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>