<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.romankaranchuk.musicplayer">


    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.SET_WALLPAPER"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity
            android:name="com.romankaranchuk.musicplayer.ui.main.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.romankaranchuk.musicplayer.ui.genres.GenresActivity"
            android:label="@string/title_activity_genres"
            android:parentActivityName="com.romankaranchuk.musicplayer.ui.main.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.romankaranchuk.musicplayer.ui.main.MainActivity" />
        </activity>
        <activity
            android:name="com.romankaranchuk.musicplayer.ui.tracklist.TracklistActivity"
            android:label="@string/title_activity_tracklist"
            android:parentActivityName="com.romankaranchuk.musicplayer.ui.genres.GenresActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.romankaranchuk.musicplayer.ui.genres.GenresActivity" />
        </activity>

        <service
            android:name="com.romankaranchuk.musicplayer.service.PlayerService"
            android:enabled="true"
            android:exported="true"
            >
        </service>
<!--            android:process=":playerService"-->
    </application>

</manifest>